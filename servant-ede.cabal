      base >=4.7 && <5
    , bytestring
    , filepath
    , ede
    , http-types
    , semigroups
    , servant
    , servant-server
    , text
    , transformers
    , unordered-containers
    , wai

  -- TODO: remove warp
  hs-source-dirs:      src
  default-language:    Haskell2010


executable servant-ede-example
  main-is: example.hs
  hs-source-dirs: example
  default-language: Haskell2010
  build-depends:
      base >= 4.7 && <5
    , servant-server
    , servant-ede
    , warp